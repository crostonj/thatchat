    "version": "0.2.0",
    "configurations": [
        
        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch Chrome",
            "url": "http://localhost",
            "webRoot": "${workspaceRoot}"
        },
        {
            "type": "node",
            "protocol": "inspector",
            "request": "launch",
            "name": "(Node)Launch Program",
            "program": "${workspaceRoot}/bin/www",
            "outFiles": []
        },
        {
            "type": "node",
            "protocol": "inspector",            
            "request": "attach",
            "name": "(Node)Attach to Process",
            "address": "localhost",
            "port": 80,
            "outFiles": []
        }
    ]
}